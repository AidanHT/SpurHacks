# =============================================================================
# Promptly - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
APP_NAME=Promptly
APP_VERSION=1.0.0
DEBUG=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Backend API settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Frontend configuration  
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Promptly
VITE_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB settings
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change-this-password-in-production
MONGODB_URL=mongodb://admin:change-this-password-in-production@mongo:27017/promptly?authSource=admin
MONGODB_DATABASE=promptly

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis settings
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:change-this-redis-password@redis:6379/0
REDIS_EXPIRE_SECONDS=3600

# Rate Limiting Configuration
RATE_LIMIT=60/minute

# =============================================================================
# OBJECT STORAGE CONFIGURATION
# =============================================================================
# MinIO settings (S3-compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-this-minio-password
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change-this-minio-password
MINIO_BUCKET=promptly-files
MINIO_SECURE=false
MINIO_URL_EXPIRY_HOURS=24

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Reset & Verification Secrets
RESET_PASSWORD_SECRET=your-reset-password-secret-change-this-in-production
VERIFICATION_SECRET=your-verification-secret-change-this-in-production

# Session settings
SESSION_SECRET_KEY=your-session-secret-key-change-this-in-production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# OAUTH2 PROVIDERS
# =============================================================================
# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Google Gemini (Primary AI service)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7

# OpenAI (Optional external service)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORG_ID=your-openai-org-id

# Anthropic Claude (Optional external service)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Jira Integration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-email@company.com
JIRA_API_TOKEN=your-jira-api-token

# Notion Integration
NOTION_API_KEY=secret_your-notion-integration-key
NOTION_DATABASE_ID=your-notion-database-id

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-only settings
RELOAD_ON_CHANGE=true
ENABLE_DOCS=true
ENABLE_ADMIN_ROUTES=true

# Testing
TEST_DATABASE_URL=mongodb://admin:change-this-password-in-production@mongo:27017/promptly_test?authSource=admin

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Set these in production environment
# ENVIRONMENT=production
# DEBUG=false  
# ENABLE_DOCS=false
# ENABLE_ADMIN_ROUTES=false
# API_WORKERS=4
# LOG_LEVEL=WARNING 