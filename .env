# =============================================================================
# Promptly - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# Promptly - Development Environment Variables
# =============================================================================

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
APP_NAME=Promptly
APP_VERSION=1.0.0
DEBUG=true
ENABLE_DOCS=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Frontend configuration  
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Promptly
VITE_ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB settings - Using local MongoDB for development
MONGODB_URL=mongodb://localhost:27017/promptly
MONGODB_DATABASE=promptly

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Redis settings
REDIS_PASSWORD=redispassword
REDIS_URL=redis://:redispassword@localhost:6379/0
REDIS_EXPIRE_SECONDS=3600

# =============================================================================
# OBJECT STORAGE CONFIGURATION
# =============================================================================
# MinIO settings (S3-compatible)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-this-minio-password
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=promptly-storage
MINIO_SECURE=false
MINIO_URL_EXPIRY_HOURS=24

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=dev-secret-key-change-in-production-12345
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Password Reset & Verification Secrets
RESET_PASSWORD_SECRET=dev-password-reset-secret-12345
VERIFICATION_SECRET=dev-verification-secret-12345

# Session settings
SESSION_SECRET_KEY=dev-session-secret-key-12345
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# =============================================================================
# OAUTH2 PROVIDERS
# =============================================================================
# Google OAuth2
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# AI SERVICE CONFIGURATION
# =============================================================================
# Google Gemini (Primary AI service) - Optional for basic functionality
GEMINI_API_KEY=
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=4096
GEMINI_TEMPERATURE=0.7

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Jira Integration
JIRA_URL=https://your-company.atlassian.net
JIRA_USERNAME=your-jira-email@company.com
JIRA_API_TOKEN=your-jira-api-token

# Notion Integration
NOTION_API_KEY=secret_your-notion-integration-key
NOTION_DATABASE_ID=your-notion-database-id

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/app.log

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
RELOAD_ON_CHANGE=true
ENABLE_DOCS=true
ENABLE_ADMIN_ROUTES=true

# Testing
TEST_DATABASE_URL=mongodb://admin:change-this-password-in-production@mongo:27017/promptly_test?authSource=admin

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Set these in production environment
# ENVIRONMENT=production
# DEBUG=false  
# ENABLE_DOCS=false
# ENABLE_ADMIN_ROUTES=false
# API_WORKERS=4
# LOG_LEVEL=WARNING

# Rate Limiting
RATE_LIMIT=60/minute 